@page
@model Dot_NET_CRUD_Project.Pages.CustomersPage.CreateModel

@{
    ViewData["Title"] = "Create Customer";
}

<div class="row" style="display: flex; justify-content: center; align-items: center;">
    <div class="col-3"></div>
    <div class="col-md-4 card shadow p-3 mb-5 bg-white rounded">
        <h4>Create: Customer</h4>
        <hr />
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Customers.Customer" class="control-label"></label>
                <input asp-for="Customers.Customer" class="form-control" />
                <span asp-validation-for="Customers.Customer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customers.Prefix" class="control-label"></label>
                <input asp-for="Customers.Prefix" class="form-control" />
                <span asp-validation-for="Customers.Prefix" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customers.FKBuilding" class="control-label"></label>
                <select asp-for="Customers.FKBuilding" class ="form-control" asp-items="ViewBag.FKBuilding"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn" />
            </div>
        </form>
        <hr />
        <div>
            <a class="btn" asp-page="./Index">Back to List</a>
        </div>
    </div>
    <div class="col-3"></div>

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
