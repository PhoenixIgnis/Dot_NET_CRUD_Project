@page
@model Dot_NET_CRUD_Project.Pages.BuildingsPage.EditModel

@{
    ViewData["Title"] = "Edit Building";
}


<div class="row" style="display: flex; justify-content: center; align-items: center;">
    <div class="col-3"></div>
    <div class="col-md-4 card shadow p-3 mb-5 bg-white rounded">
        <h4>Edit: Building</h4>
        <hr />
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Buildings.PKBuilding" />
            <div class="form-group">
                <label asp-for="Buildings.Building" class="control-label"></label>
                <input asp-for="Buildings.Building" class="form-control" />
                <span asp-validation-for="Buildings.Building" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Save" class="btn" />
            </div>
        </form>
        <hr />
        <div>
            <a class="btn" asp-page="./Index">Back to List</a>
        </div>
    </div>
    <div class="col-3"></div>
</div>
<br>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
