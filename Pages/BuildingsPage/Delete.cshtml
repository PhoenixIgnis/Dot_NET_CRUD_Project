@page
@model Dot_NET_CRUD_Project.Pages.BuildingsPage.DeleteModel

@{
    ViewData["Title"] = "Delete Building";
}

<div class="row" style="display: flex; justify-content: center; align-items: center;">
    <div class="col-2"></div>
    <div class="col card shadow p-3 mb-5 bg-white rounded">
        <div class="row text-danger">
            <h3>Are you sure you want to delete this?</h3>
        </div>
        <h4>Delete: Building</h4>
        <hr />
        <div>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Buildings.Building)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Buildings.Building)
                </dd>
            </dl>
            <div class="row">
                <div class="col-1"></div>
                <div class="col">
                    <form method="post" style="display: flex; justify-content: center;">
                        <input type="hidden" asp-for="Buildings.PKBuilding" />
                        <input type="submit" value="Delete" class="btn btn-danger" /> &emsp; | &emsp;
                        <a class="btn" asp-page="./Index">Back to List</a>
                    </form>
                </div>
                <div class="col-1"></div>
            </div>
        </div>
    </div>
    <div class="col-2"></div>
</div>
